<?xml version="1.0" encoding="UTF-8"?>
<package id="core" name="core" version="1.0" description="Core system package">
    <assets>
        <asset type="material" id="RedCubeMaterial">
            <shader>BasicShader</shader>
            <params>
                <color r="1.0" g="0.0" b="0.0" a="1.0" />
                <roughness>0.8</roughness>
            </params>
        </asset>
        <asset type="mesh" id="CubeMesh">
            <primitive type="cube" size="1.0" />
        </asset>
        <asset type="font" id="DebugFont">
            <path>default/default.ttf</path>
            <size>12</size>
        </asset>
        <asset type="sound" id="DebugToggleSound">
            <path>default/default.wav</path>
        </asset>
        <asset type="texture" id="DebugPanelBackground">
            <path>default/default.png</path>
        </asset>
    </assets>
    <scenes>
        <scene id="DefaultScene" name="Default Core Scene" default="true">
            <environment>
                <background color="0.0 0.0 0.0" />
                <ambient_light intensity="0.3" />
            </environment>
            <entities>
                <entity id="red_cube" name="Red Test Cube">
                    <transform>
                        <position x="0" y="0" z="0" />
                        <rotation x="0" y="0" z="0" w="1" />
                        <scale x="1" y="1" z="1" />
                    </transform>
                    <components>
                        <mesh asset="CubeMesh" />
                        <material asset="RedCubeMaterial" />
                        <behavior type="SpinBehavior">
                            <param name="rotationSpeed" value="45.0" />
                            <param name="axis" x="1.0" y="1.0" z="0.0" />
                        </behavior>
                    </components>
                </entity>
                <entity id="debug_overlay" name="Debug Overlay">
                    <transform>
                        <position x="0" y="0" z="-1" />
                    </transform>
                    <components>
                        <behavior type="DebugOverlayBehavior">
                            <param name="toggleKey" value="F9" />
                            <param name="fontAsset" value="DebugFont" />
                            <param name="soundAsset" value="DebugToggleSound" />
                            <param name="backgroundAsset" value="DebugPanelBackground" />
                        </behavior>
                    </components>
                </entity>
            </entities>
        </scene>
    </scenes>
</package>
