<?xml version="1.0" encoding="UTF-8"?>
<scene xmlns="http://fpvfsim.com/scene-schema" 
       id="loading_indicator" 
       name="Loading Indicator Scene" 
       version="1.0">
    
    <metadata>
        <title>Loading Indicator Scene</title>
        <description>Simple scene with central globe and orbiting objects for loading state</description>
        <author>FPV FSim System</author>
        <tags>
            <tag>loading</tag>
            <tag>indicator</tag>
            <tag>default</tag>
        </tags>
    </metadata>
    
    <environment>
        <atmosphere enabled="true" material_id="AtmosphereMaterial" mesh_id="atmosphere_sphere"/>
        <background color_r="0.1" color_g="0.1" color_b="0.2"/>
    </environment>
    
    <entities>
        <!-- Central globe entity -->
        <entity id="central_globe" type="static_mesh">
            <transform>
                <position x="0.0" y="0.0" z="0.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="2.0" y="2.0" z="2.0"/>
            </transform>
            <mesh id="sphere_mesh" material_id="LandMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <!-- Orbiting aircraft 1 -->
        <entity id="aircraft_1" type="dynamic_mesh">
            <transform>
                <position x="5.0" y="0.0" z="0.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transform>
            <mesh id="aircraft_mesh" material_id="AircraftBodyMaterial"/>
            <physics enabled="false"/>
            <animation type="orbital">
                <orbital_radius>5.0</orbital_radius>
                <orbital_speed>1.0</orbital_speed>
                <orbital_axis x="0.0" y="1.0" z="0.0"/>
            </animation>
        </entity>
        
        <!-- Orbiting aircraft 2 -->
        <entity id="aircraft_2" type="dynamic_mesh">
            <transform>
                <position x="-5.0" y="0.0" z="0.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="0.5" y="0.5" z="0.5"/>
            </transform>
            <mesh id="aircraft_mesh" material_id="AircraftBodyMaterial"/>
            <physics enabled="false"/>
            <animation type="orbital">
                <orbital_radius>5.0</orbital_radius>
                <orbital_speed>-1.0</orbital_speed>
                <orbital_axis x="0.0" y="1.0" z="0.0"/>
            </animation>
        </entity>
        
        <!-- Cloud entities -->
        <entity id="cloud_1" type="static_mesh">
            <transform>
                <position x="3.0" y="2.0" z="1.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <entity id="cloud_2" type="static_mesh">
            <transform>
                <position x="-3.0" y="2.0" z="-1.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <entity id="cloud_3" type="static_mesh">
            <transform>
                <position x="1.0" y="-2.0" z="3.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <entity id="cloud_4" type="static_mesh">
            <transform>
                <position x="-1.0" y="-2.0" z="-3.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <entity id="cloud_5" type="static_mesh">
            <transform>
                <position x="2.0" y="0.0" z="4.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
        
        <entity id="cloud_6" type="static_mesh">
            <transform>
                <position x="-2.0" y="0.0" z="-4.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
                <scale x="1.0" y="1.0" z="1.0"/>
            </transform>
            <mesh id="cloud_mesh" material_id="CloudMaterial"/>
            <physics enabled="false"/>
        </entity>
    </entities>
    
    <cameras>
        <camera id="default_camera" type="orbital">
            <transform>
                <position x="0.0" y="0.0" z="10.0"/>
                <rotation x="0.0" y="0.0" z="0.0" w="1.0"/>
            </transform>
            <projection type="perspective">
                <fov>45.0</fov>
                <near_plane>0.1</near_plane>
                <far_plane>1000.0</far_plane>
            </projection>
        </camera>
    </cameras>
    
    <lights>
        <light id="main_light" type="directional">
            <transform>
                <position x="0.0" y="10.0" z="5.0"/>
                <rotation x="-0.707" y="0.0" z="0.0" w="0.707"/>
            </transform>
            <properties>
                <intensity>1.0</intensity>
                <color r="1.0" g="1.0" b="1.0"/>
            </properties>
        </light>
    </lights>
</scene>
