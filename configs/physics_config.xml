<?xml version="1.0" encoding="UTF-8"?>
<PhysicsConfiguration>
    <SimulationClock>
        <FixedTimestep>0.016666667</FixedTimestep> <!-- 60Hz: 1/60 = 0.016666667 -->
        <MaxSubsteps>10</MaxSubsteps>
    </SimulationClock>
    
    <AirDensityModel type="ExponentialAirDensityModel">
        <SeaLevelDensity>1.225</SeaLevelDensity> <!-- kg/mÂ³ -->
        <ScaleHeight>8500.0</ScaleHeight> <!-- meters -->
    </AirDensityModel>
    
    <WindModel type="PerlinWindModel">
        <BaseWindSpeed>5.0</BaseWindSpeed> <!-- m/s -->
        <TurbulenceScale>100.0</TurbulenceScale>
        <TurbulenceIntensity>10.0</TurbulenceIntensity>
        <RandomSeed>12345</RandomSeed>
    </WindModel>
    
    <CollisionResolver type="ImpulseCollisionResolver">
        <Restitution>0.2</Restitution>
        <Friction>0.8</Friction>
    </CollisionResolver>
</PhysicsConfiguration>
