<?xml version="1.0" encoding="UTF-8"?>
<render_config>
    <!-- Display settings -->
    <display>
        <window_title>FPV Flight Sim - Procedural Earth World</window_title>
        <default_width>800</default_width>
        <default_height>600</default_height>
        <fullscreen>false</fullscreen>
        <resizable>true</resizable>
        <vsync>true</vsync>
    </display>

    <!-- Camera and projection settings -->
    <camera>
        <field_of_view>75.0</field_of_view>
        <near_plane>0.1</near_plane>
        <far_plane>10000.0</far_plane>
        <initial_position x="0.0" y="100.0" z="0.0"/>
        <initial_target x="0.0" y="0.0" z="0.0"/>
    </camera>

    <!-- 2D projection settings for current renderer -->
    <projection_2d>
        <screen_center_x>400</screen_center_x>
        <screen_center_y>300</screen_center_y>
        <world_to_screen_scale>0.01</world_to_screen_scale>
        <default_entity_radius>50.0</default_entity_radius>
    </projection_2d>

    <!-- Console rendering settings -->
    <console>
        <height>200</height>
        <background_color r="0" g="0" b="0" a="128"/>
        <border_color r="255" g="255" b="255"/>
        <border_width>2</border_width>
        <text_color r="255" g="255" b="255"/>
        <title_color r="255" g="255" b="0"/>
        <margin_x>10</margin_x>
        <margin_y>20</margin_y>
    </console>

    <!-- Anti-aliasing settings -->
    <anti_aliasing>
        <msaa_samples>4</msaa_samples>
        <enable_fxaa>false</enable_fxaa>
    </anti_aliasing>

    <!-- Performance settings -->
    <performance>
        <max_fps>60</max_fps>
        <enable_frame_limiting>true</enable_frame_limiting>
        <render_distance>1000.0</render_distance>
        <lod_bias>1.0</lod_bias>
    </performance>

    <!-- Quality settings -->
    <quality>
        <texture_filtering>linear</texture_filtering>
        <anisotropic_filtering>8</anisotropic_filtering>
        <shadow_quality>medium</shadow_quality>
        <reflection_quality>low</reflection_quality>
    </quality>

    <!-- Debug rendering -->
    <debug>
        <show_fps>true</show_fps>
        <show_wireframe>false</show_wireframe>
        <show_bounding_boxes>false</show_bounding_boxes>
        <show_coordinate_axes>false</show_coordinate_axes>
    </debug>
</render_config>
